global org.goafabric.calleeservice.drools.Fare rideFare;
import org.goafabric.calleeservice.drools.TaxiRide;

dialect  "mvel"

rule "Calculate Taxi Fare - Scenario 1"
    when
        taxiRideInstance:TaxiRide(nightSurcharge == false && distanceInMile < 10);
    then
      	rideFare.setNightSurcharge(0);
       	rideFare.setRideFare(70);
end
