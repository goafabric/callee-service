{
  "repositories": [
    "goafabric/callee-service"
  ],
  "baseBranches": [
    "autoupdate"
  ],
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboard": false,

  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "enabledManagers": ["gradle","dockerfile"],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "automergeType": "branch",
      "groupName": "all-updates",
      "ignoreTests": true
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["^build\\.gradle\\.kts$"],
      "matchStrings": [
        "val baseImage = \"(?<depName>[^:]+):(?<currentValue>[^@]+)"
      ],
      "datasourceTemplate": "docker"
    }
  ]
}
